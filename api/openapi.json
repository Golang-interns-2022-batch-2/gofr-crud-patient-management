  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "patients",
      "description": "Access and modify all data related to patients"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/patients": {
      "post": {
        "tags": [
          "patients"
        ],
        "summary": "add a new patient to the database",
        "description": "",
        "operationId": "create",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "patient objects that needs to be added to the database",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Patient"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/ApiErrResponse"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/ApiErrResponse"
            }
          }
        }
      },
      "get": {
        "tags": [
          "patients"
        ],
        "summary": "get list of all existing patients",
        "operationId": "getAll",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/ApiAllResponse"
            }
          },
          "404": {
            "description": "Patient Not Found",
            "schema": {
              "$ref": "#/definitions/ApiErrResponse"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/ApiErrResponse"
            }
          }
        }
      }
    },
    "/patients/{id}": {
      "get": {
        "tags": [
          "patients"
        ],
        "summary": "find patients by id",
        "description": "Single id to be provided as a parameter",
        "operationId": "get",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "patient id whose data would be fetched",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/ApiErrResponse"
            }
          },
          "404": {
            "description": "Patient Not Found",
            "schema": {
              "$ref": "#/definitions/ApiErrResponse"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/ApiErrResponse"
            }
          }
        }
      },
      "put": {
        "tags": [
          "patients"
        ],
        "summary": "update patient data using id",
        "description": "id and body provided by the user",
        "operationId": "update",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "patient id that needs to be updated",
            "required": true,
            "type": "integer"
          },
          {
            "in": "body",
            "name": "body",
            "description": "patient object with data that needs to get changed",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Patient"
            }
          }
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/ApiErrResponse"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/ApiErrResponse"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "patients"
        ],
        "summary": "delete patient using id",
        "description": "id provided by the user",
        "operationId": "delete",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "patient id whose data needs to be deleted",
            "type": "integer",
            "required": true
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/ApiErrResponse"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/ApiErrResponse"
            }
          },
          "404": {
            "description": "Patient Not Found",
            "schema": {
              "$ref": "#/definitions/ApiErrResponse"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/ApiErrResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Patient": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int",
          "default": 0
        },
        "name": {
          "type": "string",
          "default": ""
        },
        "phone": {
          "type": "string",
          "default": ""
        },
        "discharged": {
          "type": "boolean",
          "format": "bool",
          "default": false
        },
        "bloodGroup": {
          "type": "string",
          "description": "Type of Blood Group Patient possess",
          "enum": [
            "+A",
            "-A",
            "+B",
            "-B",
            "+AB",
            "-AB"
          ]
        },
        "description": {
          "type": "string",
          "default": ""
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "ApiResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer"
        },
        "status": {
          "type": "string"
        },
        "data": {
          "$ref": "#/definitions/Patient"
        }
      }
    },
    "ApiAllResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer"
        },
        "status": {
          "type": "string"
        },
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Patient"
          }
        }
      }
    },
    "ApiErrResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer"
        },
        "status": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Patient Management Application",
